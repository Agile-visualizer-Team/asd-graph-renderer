{
    "exclude": [
        "./coverage",
        "./node_modules",
        "./build",
        "./test"
    ],
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}