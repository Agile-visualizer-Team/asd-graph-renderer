{
    "template": "graph",
    "nodes": {
        "atom": {
            "name": "node",
            "variables": ["label", "color"]
        },
        "style": {
            "color": {
                "root": "yellow",
                "leaves": {
                    "if": [
                        {"variable": "label", "matches": "a", "then": "green"},
                        {"variable": "label", "matches": "b", "then": "blue"}
                    ],
                    "default": "red"
                },
                "nonRoot": "blue"
            }
        }
    },
    "edges": {
        "atom": {
            "name": "edge",
            "variables": ["from", "to", "weight", "color"]
        },
        "style": {
            "color": {
                "branch": {
                    "if": [
                        {"variable": "from", "matches": "a", "then": "green"},
                        {"variable": "to", "matches": "b", "then": "blue"},
                        {"variable": "weight", "lte": 3, "then": "red"},
                        {"variable": "weight", "gt": 3, "then": "orange"}
                    ],
                    "default": "red"
                }
            },
            "oriented": true
        }
    }
}